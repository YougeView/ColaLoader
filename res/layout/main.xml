    android:background="#ffffff"
    >
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="基本示例"
        android:id="@+id/btnBasic1"
        ></Button>
     <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="基本示例—3s自动关闭"
