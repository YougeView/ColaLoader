        ></Button>
     <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="自定义示例"
        android:id="@+id/btnBasic3"
        ></Button>
     <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="自定义示例—5s自动关闭"
        android:id="@+id/btnBasic4"
        ></Button>
     <Button
        android:layout_width="fill_parent"
